
<main class="container bg-sku-700">
  <h1>Upload File to Folder: {{folderId}}</h1>

  <form action="/upload/{{folderId}}" method="post" enctype="multipart/form-data">
    <!-- Name of the file -->
    <label for="name">File Name:</label>
    <input type="text" id="name" name="name" required><br>

    <!-- File input to allow any file type -->
    <label for="file">Choose file:</label>
    <input type="file" id="file" name="file" accept="*/*" required><br>

    <!-- Submit button -->
    <input type="submit" value="Upload">
  </form>
</main>
